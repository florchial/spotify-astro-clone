---
import PlaylistCard from "@/components/PlaylistCard.astro";
import { playlists } from "@/domain/playlists";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-700"
  >
    <div class="relative z-10 px-6 py-10">
      <h1 class="text-3xl font-bold">Good morning</h1>
      <div class="flex flex-wrap gap-4 mt-6">
        {playlists.map((playlist) => <PlaylistCard playlist={playlist}/>)}
      </div>
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
    </div>
  </div>
</Layout>
