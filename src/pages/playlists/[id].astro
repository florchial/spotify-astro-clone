---
import { allPlaylists } from "@/domain/playlists";
import { songs } from "@/domain/songs";
import Layout from "@/layouts/Layout.astro";

const { id } = Astro.params;

const playlist = allPlaylists.find((p) => p.id === id);
const playlistSongs = songs.filter((song) => playlist?.albums.includes(song.albumId));
---

<Layout>
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-600"
  >
    <div class="relative z-10 px-6 py-10">
     
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
    </div>
  </div>
</Layout>
